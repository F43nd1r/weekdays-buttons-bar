<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/colorCard"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <TextView
            style="@style/StyleCardTitle"
            android:text="1: Default Weekdays Buttons - App Theme" />


        <ViewStub
            android:id="@id/weekdays_stub"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize" />


        <LinearLayout
            style="?attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp">

            <CheckBox
                android:id="@+id/check_all_1"
                style="?attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkAll"
                android:text="All" />

            <CheckBox
                android:id="@+id/check_fill_1"
                style="?attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkFill"
                android:checked="true"
                android:text="Fill width" />

            <!--<CheckBox-->
                <!--android:id="@+id/check_visible_1"-->
                <!--style="?attr/buttonBarButtonStyle"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:onClick="checkVisible"-->
                <!--android:checked="true"-->
                <!--android:text="Set Visible" />-->

        </LinearLayout>
    </LinearLayout>

    <!--BANNER-->
    <TextView
        android:id="@+id/label"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_gravity="top|right"
        android:background="?attr/colorAccent"
        android:gravity="center"
        android:maxLength="7"
        android:maxLines="1"
        android:singleLine="true"
        android:rotation="45"
        android:translationX="36dp"
        android:translationY="8dp"
        android:text="Theme"
        android:elevation="2dp"
        android:textAppearance="?android:textAppearanceLargeInverse"
        android:textSize="12dp" />

